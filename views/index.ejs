<html>
<% include partials/head.ejs %>
<body>
    <% include partials/navigation.ejs %>
    <div class='container'>
      <div class="jumbotron">
        <h1>Studynator</h1>
        <p>Your tool to boost learning results.</p>
        <p><a href="/library" class="btn btn-primary btn-lg">Sign Up</a></p>
      </div>

      <h4>You are logged in as <%= session.username %>.</h4>

      <h3>Live Chat</h3>
      <div id='chat'>
          <form id="messageForm">
              <textarea class="form-control" id="message"></textarea>
              <br>
              <input type="submit" class ="btn btn-success" value="Send" />
          </form>
      </div>
    </div>

    <script>
        $(function(){
            var socket = io.connect();
            var $messageForm = $('#messageForm');
            var $message = $('#message');

            var $chat = $('#chat');

            var $streamButton = $('#strm');

            //Join the Account Room
            socket.emit('join room', {username: '<%= session.username %>'});

            socket.on('joined room', function(data){
              console.log('Users in Room: ' + data.members);
            });

            $messageForm.submit(function(e){
                e.preventDefault();
                var msg = $message.val();
                socket.emit('send message', {username: '<%= session.username %>', msg: msg});
                $message.val('');
            });

            socket.on('new message', function(data){
                $chat.append('<div class="well"><b>' + data.username + '</b>: ' + data.msg + '</div>');
            });
        });

    </script>
</body>
</html>
